@model IEnumerable<BookahMvcBookApp.Models.getallbook>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container">
    <h2>View Books</h2>
    <div class="form-group">
        <input type="text" class="form-control col-lg-4 ml-auto" placeholder="Search Here" id="searchBox" />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category</th>
                <th>Action</th>
                <th>Price</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.BookId</td>
                <td>@item.cat_name</td>
                <td>@item.Description</td>
                <td>@item.Unit</td>
                <td><img src="~/Uploads/@item.Image" style="width:150px; height:100px;" /></td>
                <td>
                    <a href="@Url.Action("Edit", "Products", new { id = item.BookId})" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Products", new { id = item.BookId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>


</div>